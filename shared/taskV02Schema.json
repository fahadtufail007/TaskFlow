{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "#/definitions/Task",
  "definitions": {
    "Task": {
      "title": "Task Object Definition",
      "type": "object",
      "additionalProperties": {},
      "$comment": "We do not want the . character in object keys",
      "propertyNames": {
        "pattern": "^((?!\\.).)*$"
      },
      "properties": {
        "baseType": {
          "type": "string"
        },
        "children": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "command": {
          "type": ["null", "object"]
        },
        "commandArgs": {
          "type": "object"
        },
        "error": {
          "anyOf": [
            {
              "type": "null"
            },
            {
              "type": "string"
            }
          ]
        },
        "permissions": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "groupId": {
          "type": "string"
        },
        "hubId": {
          "type": "string"
        },
        "id": {
          "type": "string"
        },
        "lock": { 
          "type": "boolean"
        },
        "locked": {
          "oneOf": [
            {
              "type": "boolean"
            },
            {
              "type": "string"
            }
          ]
        },
        "name": {
          "type": "string"
        },
        "nextTask": {
          "type": "string"
        },
        "parentType": {
          "type": "string"
        },       
        "sessionId": {
          "type": "string"
        },       
        "source": {
          "type": "string"
        },
        "stack": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "stackPtr": {
          "type": "integer"
        },
        "stackTaskId": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },        
        "threadId": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "userId": {
          "type": "string"
        },
        "versionExternal": {
          "type": "string"
        },
        "versionInternal": {
          "type": "string"
        },
        "privacy": {
          "$ref": "./genericV02schema.json#/definitions/Privacy"
        },
        "input": {
          "$ref": "./genericV02schema.json#/definitions/Input"
        },
        "meta": {
          "$ref": "./genericV02schema.json#/definitions/Meta"
        },
        "output": {
          "$ref": "./genericV02schema.json#/definitions/Output"
        },
        "config": {
          "$ref": "./genericV02schema.json#/definitions/Config"
        },
        "state": {
          "$ref": "./genericV02schema.json#/definitions/State"
        },
        "processor": {
          "$ref": "./genericV02schema.json#/definitions/Processor"
        },
        "hub": {
          "$ref": "./genericV02schema.json#/definitions/Hub"
        },
        "request": {
          "$ref": "./genericV02schema.json#/definitions/Request"
        },
        "response": {
          "$ref": "./genericV02schema.json#/definitions/Response"
        }
      },
      "required": ["id"]
    }
  }
}
