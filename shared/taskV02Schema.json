{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "#/definitions/Task",
  "definitions": {
    "Task": {
      "title": "Task Object Definition",
      "type": "object",
      "additionalProperties": {},
      "$comment": "We do not want the . character in object keys",
      "propertyNames": {
        "pattern": "^((?!\\.).)*$"
      },
      "properties": {
        "baseType": {
          "type": "string"
        },
        "children": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "completedAt": {
          "type": "integer",
          "minimum": 0,
          "description": "Timestamp in milliseconds since the Unix epoch (January 1, 1970 00:00:00 UTC)"
        },
        "createdAt": {
          "type": "integer",
          "minimum": 0,
          "description": "Timestamp in milliseconds since the Unix epoch (January 1, 1970 00:00:00 UTC)"
        },
        "destination": {
          "type": "string"
        },
        "error": {
          "anyOf": [
            {
              "type": "null"
            },
            {
              "type": "string"
            }
          ]
        },
        "exit":{ 
          "type": "boolean"
        },
        "permissions": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "groupId": {
          "type": "string"
        },
        "hubId": {
          "type": "string"
        },
        "id": {
          "type": "string"
        },
        "lock": { 
          "type": "boolean"
        },
        "locked": {
          "oneOf": [
            {
              "type": "boolean"
            },
            {
              "type": "string"
            }
          ]
        },
        "name": {
          "type": "string"
        },
        "next": {
          "type": "boolean"
        },
        "nextTask": {
          "type": "string"
        },
        "parentId": {
          "type": "string"
        },
        "parentInstanceId": {
          "type": "string"
        },
        "parentType": {
          "type": "string"
        },
        "prevInstanceId": {
          "type": ["null", "object"]
        },        
        "send": {
          "type": "boolean"
        },
        "sessionId": {
          "type": "string"
        },       
        "source": {
          "type": "string"
        },
        "stack": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "stackPtr": {
          "type": "integer"
        },
        "stackTaskId": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },        
        "threadId": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "updateCount": {
          "type": "integer"
        },
        "updatedAt": {
          "type": "object",
          "properties": {
            "date": {
              "type": "string",
              "format": "date-time"
            },
            "timezone": {
              "type": "string"
            }
          },
          "required": ["date", "timezone"]
        },
        "userId": {
          "type": "string"
        },
        "versionExternal": {
          "type": "string"
        },
        "versionInternal": {
          "type": "string"
        },
        "privacy": {
          "$ref": "./genericV02schema.json#/definitions/Privacy"
        },
        "input": {
          "$ref": "./genericV02schema.json#/definitions/Input"
        },
        "output": {
          "$ref": "./genericV02schema.json#/definitions/Output"
        },
        "config": {
          "$ref": "./genericV02schema.json#/definitions/Config"
        },
        "state": {
          "$ref": "./genericV02schema.json#/definitions/State"
        },
        "request": {
          "$ref": "./genericV02schema.json#/definitions/Request"
        },
        "response": {
          "$ref": "./genericV02schema.json#/definitions/Response"
        }
      },
      "required": ["id"]
    }
  }
}
